# N8N Queue Instance - Environment Configuration Template

# ============================================
# CORE N8N SETTINGS
# ============================================
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_HOST=n8n.example.com
N8N_EDITOR_BASE_URL=https://n8n.example.com/
N8N_API_URL=https://n8n.example.com/api

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=change_me_secure_password_12345
DB_POSTGRESDB_SSL=true

# ============================================
# QUEUE CONFIGURATION
# ============================================
QUEUE_MODE_ACTIVE=true
QUEUE_BULL_REDIS_HOST=redis
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_DB=0
QUEUE_BULL_REDIS_PASSWORD=

# ============================================
# WORKER CONFIGURATION
# ============================================
N8N_WORKER_COUNT=3
N8N_WORKER_MEMORY_LIMIT=2048
N8N_WORKER_TIMEOUT=5400

# ============================================
# SECURITY & AUTH
# ============================================
N8N_ENCRYPTION_KEY=change_me_with_random_string
N8N_USER_MANAGEMENT_JWT_SECRET=change_me_with_jwt_secret
N8N_JWKS_URL=

# ============================================
# LOGGING & MONITORING
# ============================================
N8N_LOG_LEVEL=info
N8N_LOG_FILE_PATH=/logs/n8n.log
N8N_LOGGER_OUTPUT=file,console

# ============================================
# EXTERNAL SERVICES
# ============================================
WEBHOOK_URL=https://n8n.example.com/webhook
EXECUTION_TIMEOUT_HOURS=12

# ============================================
# SLACK INTEGRATION (Optional)
# ============================================
SLACK_WEBHOOK_URL=

# ============================================
# AWS S3 (Optional - for workflow storage)
# ============================================
AWS_S3_BUCKET=
AWS_S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ============================================
# KUBERNETES SPECIFIC
# ============================================
K8S_NAMESPACE=n8n
K8S_POD_NAME=
K8S_DEPLOYMENT_NAME=n8n-queue

# ============================================
# PERFORMANCE TUNING
# ============================================
DB_POOL_MIN=2
DB_POOL_MAX=10
NODE_MAX_OLD_SPACE_SIZE=2048
